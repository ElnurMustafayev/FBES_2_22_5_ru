<Window x:Class="GettingStartedApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingStartedApp"
        mc:Ignorable="d"
        Title="Getting Started App" Height="450" Width="700">
    <StackPanel>
        <!--<Button>Test</Button>-->
        <!--<Button Content="Test"></Button>-->
        <!--<Button Content="Test"/>-->

        <Button x:Name="MyButton"
                Content="Test" 
                Background="Aqua" 
                Foreground="Red"
                FontSize="24"
                FontWeight="Bold"
                FontStyle="Italic"
                MaxWidth="300"
                MinWidth="100"
                Width="150"
                Height="200"/>

        <TextBox x:Name="MyTextBox"
                 Text="Test"
                 Background="Blue"
                 Foreground="White"
                 IsReadOnly="False"
                 FontSize="24"
                 TextAlignment="Center"/>

        <CheckBox Content="Is Married?" IsChecked="True"/>

    </StackPanel>
</Window>
